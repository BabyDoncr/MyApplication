<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#156c87"
    android:orientation="vertical"
    tools:context="com.lkl.myapplication.firstContainer">


    <TextView

        android:id="@+id/calculator_screen"
        android:layout_width="338dp"
        android:layout_height="170dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"

        android:layout_marginRight="20dp"
        android:background="@drawable/background"
        android:gravity="right|bottom"
        android:paddingRight="5dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <TextView
                android:textColor="@color/black"
                android:id="@+id/bt_11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt1"
                android:gravity="center"

                android:text="C"
                android:textSize="40dp" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/bt_10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt1"
                android:gravity="center"
                android:text="+/-"
                android:textSize="30dp" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/bt_x"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt1"
                android:gravity="center"
                android:text="%"
                android:textSize="45dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_c"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt2"
                android:gravity="center"
                android:text="รท"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shape="oval">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt3"
                android:gravity="center"
                android:text="7"
                android:textSize="40dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"

                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt3"
                android:gravity="center"
                android:text="8"
                android:textSize="40dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"

                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt3"
                android:gravity="center"
                android:text="9"
                android:textSize="40dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_add"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt2"
                android:gravity="center"
                android:text="x"
                android:textSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shape="oval">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"

                android:layout_marginBottom="5dp"
                android:background="@drawable/bt3"
                android:gravity="center"
                android:text="4"
                android:textSize="40dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"

                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt3"
                android:gravity="center"
                android:text="5"
                android:textSize="40dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt3"
                android:gravity="center"
                android:text="6"
                android:textSize="40dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_minus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt2"
                android:gravity="center"
                android:text="-"
                android:textSize="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt3"
                android:gravity="center"
                android:text="1"
                android:textSize="40dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt3"
                android:gravity="center"
                android:text="2"
                android:textSize="40dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt3"
                android:gravity="center"
                android:text="3"
                android:textSize="40dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_radic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bt2"
                android:gravity="center"
                android:text="+"
                android:textSize="40dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_0"
                android:layout_width="170dp"
                android:layout_height="80dp"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bt4"
                android:gravity="center"
                android:text="0"
                android:textSize="40dp" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_dot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bt3"
                android:gravity="center"
                android:text="."
                android:textSize="45dp" />


            <TextView
                android:textColor="@color/white"
                android:id="@+id/bt_equal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bt2"
                android:gravity="center"
                android:text="="
                android:textSize="45dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
