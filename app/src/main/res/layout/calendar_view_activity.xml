<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lkl.TimePicker.calendarViewActivity"
    android:orientation="vertical">

    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:firstDayOfWeek="3"
        android:background="@drawable/background1"
        android:focusedMonthDateColor="@color/purple_500">
<!--        android:selectedWeekBackgroundColor="@color/purple_500"-->
<!--        android:showWeekNumber="true"-->
<!--        android:shownWeekCount="4"-->
<!--        android:weekNumberColor="@color/teal_200"-->
<!--        android:weekSeparatorLineColor="@color/purple_200">-->


    </CalendarView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="确定"
        android:layout_marginTop="30dp"
        android:id="@+id/btn_calendar"
        >

    </Button>
</LinearLayout>