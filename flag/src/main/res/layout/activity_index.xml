<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue">

    <LinearLayout
        android:id="@+id/onboard_ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="144dp"
        tools:ignore="HardcodedText"
        tools:targetApi="LOLLIPOP">

        <TextView
            android:id="@+id/prompt_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:alpha="0"
            android:text="时间就像海绵里的水，只要愿挤，总还是有的。"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:alpha="1"/>

        <TextView
            android:id="@+id/prompt_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:alpha="0"
            android:text="--鲁迅"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:alpha="1" />

        <Button
            android:id="@+id/onboard_b_choice_1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@color/whitesmoke"
            android:scaleX="0"
            android:scaleY="0"
            android:text="@string/login"
            android:textColor="@android:color/black"
            tools:scaleX="1"
            tools:scaleY="1" />

        <Button
            android:id="@+id/onboard_b_choice_2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/whitesmoke"
            android:scaleX="0"
            android:scaleY="0"
            android:text="@string/register"
            android:textColor="@android:color/black"
            tools:scaleX="1"
            tools:scaleY="1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/onboard_iv_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:contentDescription="@null"
        android:src="@drawable/img_face" />

</FrameLayout>