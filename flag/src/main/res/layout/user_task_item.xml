<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/user_task_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:background="@drawable/round_corner_grey1"
                android:textColor="@color/grey"
                android:textSize="12sp"
                tools:text="生活" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_task_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/spongebob" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="任务：专业课复习"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/user_task_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="时间：08:00 - 09:00"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/user_task_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="详情：早起的鸟儿有虫吃！请在既定时间段内起床打卡！"
                    android:maxEms="20"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/user_task_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>