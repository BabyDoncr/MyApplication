<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lkl.seniorui.MainActivity">


    <Button
        android:id="@+id/btn_autoComplateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自动提示文本框"></Button>

    <Button
        android:id="@+id/btn_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下拉菜单"></Button>

    <Button
        android:id="@+id/btn_lv_arryAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="列表ARRAYADAPTER"></Button>

    <Button
        android:id="@+id/btn_lv_simpleAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="列表SIMPLEADAPTER"></Button>

    <Button
        android:id="@+id/btn_lv_baseAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="列表BaseADAPTER"></Button>

    <Button
        android:id="@+id/btn_gv_baseAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网格列表BaseADAPTER"></Button>

    <Button
        android:id="@+id/btn_glide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="glide加载网格图片"></Button>

    <Button
        android:id="@+id/btn_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="轮播图"></Button>


</LinearLayout>